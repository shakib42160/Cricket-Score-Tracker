{{#> main}}
<h1 class="text-2xl font-bold mb-4">Matches</h1>

<a href="/dashboard" class="btn btn-secondary mb-4">‚Üê Back to Dashboard</a>

<form action="/api/matches" method="POST" class="mb-6">
  <input type="date" name="date" required class="input input-bordered w-full mb-2" />
  <input type="text" name="location" placeholder="Location" required class="input input-bordered w-full mb-2" />
  
  <select name="team1_id" class="input input-bordered w-full mb-2" required>
    <option value="">Select Team 1</option>
    {{#each teams}}
      <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <select name="team2_id" class="input input-bordered w-full mb-2" required>
    <option value="">Select Team 2</option>
    {{#each teams}}
      <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit" class="btn btn-primary w-full">Create Match</button>
</form>

<ul class="list-disc ml-6">
  {{#each matches}}
    <li>{{this.location}} ({{this.date}})</li>
  {{/each}}
</ul>
{{/main}}
