{{#extend "main"}}

{{#content "body"}}
<div class="container mt-5">
  <h1 class="mb-4 text-center">Create New Score</h1>
  <form action="/api/scores" method="POST" class="w-50 mx-auto">
    <div class="mb-3">
      <label for="match_id" class="form-label">Match ID</label>
      <input type="text" id="match_id" name="match_id" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="player_id" class="form-label">Player ID</label>
      <input type="text" id="player_id" name="player_id" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="runs" class="form-label">Runs</label>
      <input type="number" id="runs" name="runs" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="wickets" class="form-label">Wickets</label>
      <input type="number" id="wickets" name="wickets" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="catches" class="form-label">Catches</label>
      <input type="number" id="catches" name="catches" class="form-control" required>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-success">Create Score</button>
    </div>
  </form>
</div>
{{/content}}

{{/extend}}
