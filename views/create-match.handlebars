{{#extend "main"}}

{{#content "body"}}
<div class="container mt-5">
  <h1 class="mb-4 text-center">Create New Match</h1>
  <form action="/api/matches" method="POST" class="w-50 mx-auto">
    <div class="mb-3">
      <label for="team1_id" class="form-label">Team 1 ID</label>
      <input type="text" id="team1_id" name="team1_id" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="team2_id" class="form-label">Team 2 ID</label>
      <input type="text" id="team2_id" name="team2_id" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">Match Date</label>
      <input type="date" id="date" name="date" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input type="text" id="location" name="location" class="form-control" required>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-success">Create Match</button>
    </div>
  </form>
</div>
{{/content}}

{{/extend}}
