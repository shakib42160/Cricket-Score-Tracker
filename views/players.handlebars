{{#> main}}
<h1 class="text-2xl font-bold mb-4">Players</h1>

<a href="/dashboard" class="btn btn-secondary mb-4">‚Üê Back to Dashboard</a>

<form action="/api/players" method="POST" class="mb-6">
  <input type="text" name="name" placeholder="Player Name" required class="input input-bordered w-full mb-2" />
  <select name="team_id" class="input input-bordered w-full mb-2" required>
    <option value="">Select Team</option>
    {{#each teams}}
      <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button type="submit" class="btn btn-primary w-full">Create Player</button>
</form>

<ul class="list-disc ml-6">
  {{#each players}}
    <li>{{this.name}} (Team ID: {{this.team_id}})</li>
  {{/each}}
</ul>
{{/main}}
