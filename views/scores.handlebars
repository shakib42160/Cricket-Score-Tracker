{{#> main}}
<h1 class="text-2xl font-bold mb-4">Scores</h1>

<a href="/dashboard" class="btn btn-secondary mb-4">‚Üê Back to Dashboard</a>

<form action="/api/scores" method="POST" class="mb-6">
  <select name="match_id" class="input input-bordered w-full mb-2" required>
    <option value="">Select Match</option>
    {{#each matches}}
      <option value="{{this.id}}">{{this.location}} ({{this.date}})</option>
    {{/each}}
  </select>

  <select name="player_id" class="input input-bordered w-full mb-2" required>
    <option value="">Select Player</option>
    {{#each players}}
      <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <input type="number" name="runs" placeholder="Runs" class="input input-bordered w-full mb-2" />
  <input type="number" name="wickets" placeholder="Wickets" class="input input-bordered w-full mb-2" />
  <button type="submit" class="btn btn-primary w-full">Create Score</button>
</form>

<ul class="list-disc ml-6">
  {{#each scores}}
    <li>Player ID: {{this.player_id}}, Runs: {{this.runs}}, Wickets: {{this.wickets}}</li>
  {{/each}}
</ul>
{{/main}}
